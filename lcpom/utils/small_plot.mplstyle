font.family : Arial
legend.fontsize : 14
axes.labelsize : 16
xtick.labelsize: 16
ytick.labelsize: 16
axes.titlesize: 18

#labelpad
axes.labelpad: 2.0
axes.titlepad: 4.0
axes.xmargin: 0.04
axes.ymargin: 0.04
legend.borderaxespad: 0.3
legend.borderpad: 0.3

#lines
lines.linewidth: 2

#Lay_out

figure.figsize:5,5
figure.facecolor:  white
figure.dpi: 100
savefig.facecolor: white
savefig.dpi: 400


#figure.subplot.left:   0.12  # the left side of the subplots of the figure
