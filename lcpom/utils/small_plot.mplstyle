#figure.subplot.bottom: 0.12   # the bottom of the subplots of the figure
#figure.subplot.top:    0.88   # the top of the subplots of the figure

figure.subplot.left:   0.08  # the left side of the subplots of the figure
figure.subplot.right:  0.95    # the right side of the subplots of the figure
figure.subplot.bottom: 0.08   # the bottom of the subplots of the figure
figure.subplot.top:    0.95   # the top of the subplots of the figure

